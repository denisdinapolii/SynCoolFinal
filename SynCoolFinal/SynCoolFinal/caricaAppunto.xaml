<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Carica appunto"
             x:Class="SynCoolFinal.caricaAppunto">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" >
                <Label Text="SynCool" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <StackLayout>
                <Label Text="Vuoi caricare un tuo appunto?"
                       HorizontalOptions="Center"
                       FontSize="Medium"
                       TextColor="Black" 
                ></Label>

                <StackLayout Spacing="10" Padding="20">
                    <Entry
                        Placeholder="Inserisci il nome del tuo file"
                        ></Entry>
                    <Picker Title="Scegli la materia" x:Name="cmbMateria" ItemDisplayBinding="{Binding Nome}">
                    </Picker>
                    
                    
                </StackLayout>
                

                <Button 
                Text="Carica appunto"
                Clicked="Button_Clicked"
                ></Button>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>